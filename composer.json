{
  "name": "firesphere/searchbackend",
  "description": "Common codebase for searching with Solr or Elastic",
  "minimum-stability": "stable",
  "license": "BSD-3-Clause",
  "authors": [
    {
      "name": "firesphere",
      "email": "simon@firesphere.dev"
    }
  ],
  "require": {
    "php": "^8",
    "silverstripe/framework": "^4|^5",
    "symbiote/silverstripe-queuedjobs": "^4|^5"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.5",
    "friendsofphp/php-cs-fixer": "^3.35"
  },
  "autoload": {
    "psr-4": {
      "Firesphere\\SearchBackend\\": "src"
    }
  },
  "extra": {
    "expose": [
      "client/dist"
    ],
    "branch-alias": {
      "dev-main": "1.x-dev"
    }
  },
  "sugest": {
    "firesphere/healthcheckjobs": "Keep a tab on your cron and/or queued jobs"
  }
}
